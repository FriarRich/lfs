#!/usr/bin/perl
use strict;
use warnings;
use autodie qw(:all);
$|++;
use FindBin qw($RealBin);
use lib "$RealBin/../lib";
use Data::Dumper;

if(open(STDIN,"-|")) {
  while(<STDIN>){
    my @p = m{(.*) at ([:A-Za-z0-9/.]+) line (\d+)(.*)?};
    print "$p[1]:$p[2]:$p[0]\n" if @p;
    print "$_";
  };
} else {
  open(STDERR,">&STDOUT");
  exec("/usr/bin/perl", @ARGV);
  exit(0);
};

