#!/bin/bash

do_show_flags() {
  du -hs src;
  text="$(for i in $(find src -name '.*.done'); do
    echo $(cat $i):$i;
  done | sort -r)"
  echo $(echo "$text" | tail -n 1) oldest
  echo
  echo "$text" | head -n 28
}
show_flags() {
	do_show_flags 2>/dev/null
};
export -f do_show_flags show_flags
exec watch -n 5 -d 'bash -c show_flags'
